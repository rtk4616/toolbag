[user]
    name = Mike Wilkerson
    email = mike@cloudistics.com

[diff]
	tool = vimdiff
    # tool = ediff

[difftool "ediff"]
    cmd = emacs --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"

[mergetool]
    # Setting "prompt" to true because I like to do merges manually. If I
    # accidentally try to merge with a tool, seeing this prompt will alert me,
    # and I'll be able to ^C out, and do it manually.
	prompt = true

[difftool]
    # Difftool, on the other hand is a nice thing to have. Don't prompt.
	prompt = false

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[alias]
    d = diff
    ds = diff --staged
    dt = difftool
    ec = !EDITOR='emacs' git commit
    ed = difftool --tool=ediff
    eds = difftool --tool=ediff --staged
    la = log -p
    latest-tag = describe --abbrev=0 --tags
    lo = log --pretty='%Cred%h%Creset | %Cgreen%ar by %an%Creset - %Cblue%s'
    ls = log --stat
    st = status
    vc = !EDITOR='vim' git commit
    vd = difftool --tool=vimdiff
    vds = difftool --tool=vimdiff --staged

[core]
	editor = vim

[push]
	default = simple

[branch]
    autosetuprebase = always
    autosetupmerge = true